+  REL *old_relend = relend;
+  setup_relbuf(dso, &debug_sections[DEBUG_STR_OFFSETS], &reltype);
+
+  uint32_t str_off = do_read_32_relocated (str_off_ptr);
+
+  relptr = old_relptr;
+  relend = old_relend;
+  return str_off;
+}
