{
    "description": "OVMF with SB+SMM, SB enabled, MS certs enrolled",
    "interface-types": [
        "uefi"
    ],
    "mapping": {
        "device": "flash",
        "mode" : "split",
        "executable": {
            "filename": "/usr/share/edk2/ovmf/OVMF_CODE_4M.secboot.qcow2",
            "format": "qcow2"
        },
        "nvram-template": {
            "filename": "/usr/share/edk2/ovmf/OVMF_VARS_4M.secboot.qcow2",
            "format": "qcow2"
        }
    },
    "targets": [
        {
            "architecture": "x86_64",
            "machines": [
                "pc-q35-*"
            ]
        }
    ],
    "features": [
        "acpi-s3",
        "enrolled-keys",
        "requires-smm",
        "secure-boot",
        "verbose-dynamic"
    ],
    "tags": [

    ]
}
