+    systemctl start liveos-artifacts-download &    
+
     wait_for_dev -n /dev/root
 else
+    echo "---- debug ---- parse-livenet.sh [6] did not find handler ----" > /dev/kmsg
     info "livenet: no url handler for $liveurl"
 fi
