--- a/tests/cstring_view.cpp
+++ /dev/null
@@ -1,60 +0,0 @@
-#include "container/cstring_view.h"
-#include "gtest/gtest.h"
-
-#include <type_traits>
-
-namespace bpftrace::test::cstring_view {
