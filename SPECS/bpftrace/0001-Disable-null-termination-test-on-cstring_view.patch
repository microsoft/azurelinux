From: Sriram Nambakam <snambakam@microsoft.com>
Date: Fri, 11 Apr 2025 09:22:46 -0700
Subject: [PATCH] Disable null termination test on cstring_view - cstring_view
 should not guarantee null termination on string.

---
 tests/cstring_view.cpp | 6 ++++--
 1 file changed, 4 insertions(+), 2 deletions(-)

diff --git a/tests/cstring_view.cpp b/tests/cstring_view.cpp
index 5b82a990..a469577f 100644
--- a/tests/cstring_view.cpp
+++ b/tests/cstring_view.cpp
@@ -17,7 +17,8 @@ TEST(cstring_view, c_string)
   EXPECT_EQ('a', sv[0]);
   EXPECT_EQ('b', sv[1]);
   EXPECT_EQ('c', sv[2]);
-  EXPECT_EQ('\0', sv[3]);
+  // Note: Null termination is not guaranteed
+  // EXPECT_EQ('\0', sv[3]);
 }
 
 TEST(cstring_view, std_string)
@@ -30,7 +31,8 @@ TEST(cstring_view, std_string)
   EXPECT_EQ('a', sv[0]);
   EXPECT_EQ('b', sv[1]);
   EXPECT_EQ('c', sv[2]);
-  EXPECT_EQ('\0', sv[3]);
+  // Note: Null termination is not guaranteed
+  // EXPECT_EQ('\0', sv[3]);
 }
 
 TEST(cstring_view, std_string_view)
