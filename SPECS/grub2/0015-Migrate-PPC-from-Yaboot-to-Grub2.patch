+++ b/Makefile.util.def
@@ -508,6 +508,13 @@ script = {
   condition = COND_HOST_LINUX;
 };
 
+script = {
+  name = '20_ppc_terminfo';
+  common = util/grub.d/20_ppc_terminfo.in;
