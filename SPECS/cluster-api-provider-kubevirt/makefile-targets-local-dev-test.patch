+	# Populate the local repository
+	cp metadata.yaml $(LOCAL_REPOSITORY)
+	cp infrastructure-components.yaml $(LOCAL_REPOSITORY)
+	cp templates/cluster-template-azl.yaml $(LOCAL_REPOSITORY)/cluster-template.yaml
