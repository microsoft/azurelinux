+static size_t clock_count_enabled_sources(struct phc2sys_private *priv,
+	struct clock *ignore)
+{
+	size_t count = 0;
+	struct clock * clock = NULL;
+
+	LIST_FOREACH(clock, &priv->clocks, list) {
+		/* ignore the dst clock */
+		if (clock->state == PS_MASTER)
