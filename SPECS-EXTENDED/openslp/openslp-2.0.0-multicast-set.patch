+
 multicast_route_set() 
 {
     PING_OPTIONS_1='-c1 -w1'
@@ -36,8 +13,8 @@ multicast_route_set()
     MSG_FAILED_TO_ADD=' FAILED - Route NOT Added.'
     MSG_SUCCES_ON_ADD=' SUCCESS - Route Added.'
 
