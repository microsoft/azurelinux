                },
                {
                    "ID": "MyRootfs",
                    "MountPoint": "/",
                    "RemoveDocs": true,
                    "OverlayBaseImage": "../out/images/core-efi/core-efi-1.0.20200918.1751.ext4"
                }
            ],
            "PackageLists": [
                "path/to/packages.json",
                "path/to/extraPackages.json"
            ],
            "Packages":[
                "additionalPkgName"
            ],
            "KernelOptions": {
                "default": "kernel"
            },
            "AdditionalFiles": {
