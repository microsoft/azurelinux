{
    "Disks": [
        {
            "PartitionTableType": "gpt",
            "MaxSize": 1024,
            "TargetDisk": {
                "Type": "path",
                "Value": "/dev/sda"
            },
            "Artifacts": [
                {
                    "Name": "CompressedVHD",
                    "Type": "vhd",
                    "Compression": "gz"
                },
                {
                    "Name": "UncompressedVHD",
                    "Type": "vhd"
                }
            ],
            "RawBinaries": [
                {
                    "BinPath": "binaries/1.bin",
                    "BlockSize": 1024,
                    "Seek": 1
                },
                {
                    "BinPath": "binaries/2.bin",
                    "BlockSize": 1024,
                    "Seek": 2
                }
            ],
            "Partitions": [
                {
                    "ID": "MyBoot",
                    "Flags": [
                        "esp",
                        "boot"
                    ],
                    "Start": 3,
                    "End": 9,
                    "FsType": "fat32"
                },
                {
                    "ID": "MyRootfs",
                    "Start": 9,
                    "End": 1024,
                    "FsType": "ext4",
                    "Flags": [
                        "dmroot"
                    ]
                }
            ]
        },
        {
            "PartitionTableType": "mbr",
            "MaxSize": 4096,
            "TargetDisk": {
                "Type": "path",
                "Value": "/dev/sdb"
            },
            "Partitions": [
                {
                    "ID": "MyBootA",
                    "Flags": [
                        "boot"
                    ],
                    "Start": 3,
                    "FsType": "fat32"
                },
                {
                    "ID": "MyRootfsA",
                    "Start": 9,
                    "End": 1024,
                    "FsType": "ext4",
                    "Flags": [
                        "dmroot"
                    ]
                },
                {
                    "ID": "MyBootB",
                    "Flags": [
                        "boot"
                    ],
                    "Start": 1024,
                    "FsType": "fat32"
                },
                {
                    "ID": "MyRootfsB",
                    "Start": 1033,
                    "End": 2048,
                    "FsType": "ext4",
                    "Flags": [
                        "dmroot"
                    ]
                },
                {
                    "ID": "SharedData",
                    "Start": 2048,
                    "End": 0,
                    "FsType": "ext4"
                }
            ]
        }
    ],
    "SystemConfigs": [
        {
            "Name": "SmallerDisk",
            "IsDefault": true,
