{
    "Disks": [
        {
            "PartitionTableType": "gpt",
            "MaxSize": 512,
            "Artifacts": [
                {
                    "Name": "core",
                    "Type": "vhdx"
                }
            ],
            "Partitions": [
                {
                    "ID": "boot",
                    "Flags": [
                        "esp",
                        "boot"
                    ],
                    "Start": 1,
                    "End": 9,
                    "FsType": "fat32"
                },
                {
                    "ID": "rootfs",
                    "Start": 9,
                    "End": 0,
                    "FsType": "ext4"
                }
            ]
        }
    ],
    "SystemConfigs": [
        {
            "Name": "Standard",
            "BootType": "efi",
            "PartitionSettings": [
                {
                    "ID": "boot",
                    "MountPoint": "/boot/efi",
                    "MountOptions": "umask=0077"
                },
                {
                    "ID": "rootfs",
                    "MountPoint": "/"
                }
            ],
            "PackageLists": [
                "packagelists/baremetal-packages.json",
                "packagelists/base-image-packages.json",
                "packagelists/cloud-init-packages.json",
                "packagelists/selinux.json"
            ],
            "KernelCommandLine": {
                "ExtraCommandLine": "console=tty0 console=ttyS0 rd.info log_buf_len=1M",
                "SELinux": "enforcing"
            },
            "KernelOptions": {
                "default": "kernel"
            },
            "AdditionalFiles": {
                "additionalconfigs/macros.excludedocs": "/usr/lib/rpm/macros.d/macros.excludedocs"
            },
            "FinalizeImageScripts": [
                {
                    "Path": "scripts/cleanup.sh"
                }
            ],
            "Hostname": "azure-linux"
        }
    ]
}
